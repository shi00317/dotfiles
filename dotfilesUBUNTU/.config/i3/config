# --- PRE-LOAD ---
# Detect monitors before loading config
exec_always --no-startup-id ~/.config/i3/detect_monitors.sh

# Import the monitor variables ($main and $side)
include ~/.config/i3/monitors.conf

# Monitor hotplug detection - runs in background to detect monitor changes
exec_always --no-startup-id pkill -f "monitor_watcher.sh"; ~/.config/i3/monitor_watcher.sh &

# --- VARIABLES ---
set $mod Mod4
font pango:JetBrainsMono Nerd Font 11

# --- KEY BINDINGS ---
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Shift+q kill
bindsym $mod+d exec --no-startup-id rofi -show drun -show-icons
bindsym $mod+p exec --no-startup-id ~/.config/i3/display_selector.sh
bindsym $mod+shift+x exec i3lock

# Volume (keyboard media keys)
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Drag floating windows
floating_modifier $mod

# Reload/Restart
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit i3?' -B 'Yes' 'i3-msg exit'"

# --- WORKSPACES ---
# Names
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $wsT "t: Term"
set $wsW "w: Code"

# Assignments (Uses the variables from detect_monitors.sh)
workspace $ws1 output $main
workspace $ws2 output $main
workspace $ws3 output $main
workspace $ws4 output $main
workspace $ws5 output $main
workspace $wsT output $main
workspace $wsW output $main

workspace $ws6 output $side
workspace $ws7 output $side
workspace $ws8 output $side
workspace $ws9 output $side

# Switch
bindsym $mod+Tab workspace back_and_forth
bindsym $mod+b workspace back_and_forth
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+t workspace $wsT
bindsym $mod+w workspace $wsW

# Move
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+t move container to workspace $wsT
bindsym $mod+Shift+w move container to workspace $wsW

# --- APP ASSIGNMENTS ---
assign [class="Alacritty|Gnome-terminal|XTerm"] $wsT
assign [class="Code|code-oss|Cursor"] $wsW

# --- VISUALS ---
gaps inner 5
gaps outer 0
# Ensure all windows have borders
default_border pixel 3
default_floating_border pixel 3
for_window [class=".*"] border pixel 3

# Colors                Border  Backgr. Text    Indicator Child_Border
client.focused          #bd93f9 #bd93f9 #282a36 #bd93f9   #bd93f9
client.focused_inactive #44475a #44475a #f8f8f2 #44475a   #44475a
client.unfocused        #282a36 #282a36 #bfbfbf #282a36   #282a36
client.urgent           #ff5555 #ff5555 #f8f8f2 #ff5555   #ff5555

# --- AUTOSTART ---
# 1. Apply DPI settings
exec_always --no-startup-id xrdb -merge ~/.Xresources
# 2. Compositor (Transparency/Smoothness)
exec_always --no-startup-id picom -b
# 3. Wallpaper
# Use --bg-fill so the image fills each monitor properly
exec_always --no-startup-id feh --bg-fill /usr/share/backgrounds/warty-final-ubuntu.png
# 4. Polybar
exec_always --no-startup-id ~/.config/polybar/launch.sh
# 5. Network Applet
exec --no-startup-id nm-applet
# 6. Autorandr (Check room location)
exec --no-startup-id autorandr --change
# 7. Set the laptop trackpad tap-as-click and natural scrolling (auto-detect touchpad)
exec_always --no-startup-id sh -c 'id=$(xinput list | grep -i touchpad | head -1 | sed -n "s/.*id=\\([0-9]*\\).*/\1/p"); [ -n "$id" ] && xinput set-prop "$id" "libinput Tapping Enabled" 1 && xinput set-prop "$id" "libinput Natural Scrolling Enabled" 0'
